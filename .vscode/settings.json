{
	// Formatting
	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "file",
	"editor.codeActionsOnSave": {
		"source.formatAll.opentofu": "always"
	},
	"[go][go.mod]": {
		"editor.defaultFormatter": "golang.go"
	},

	// File Nesting
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		"go.mod": "go.sum,.gitignore,.air.toml",
		"main.go": ".env.local",
		"README.md": "LICENSE"
	},

	// Spell Checker
	"cSpell.language": "en,de-de",
	"cSpell.words": [
		"appuser",
		"bytebufferpool",
		"fasttemplate",
		"github",
		"GOARCH",
		"gommon",
		"isatty",
		"labstack",
		"ldflags",
		"loggd",
		"loggdme",
		"mattn",
		"valyala"
	]
}
